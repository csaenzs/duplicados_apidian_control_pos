# ================================================
# ARCHIVO DE EJEMPLO DE CONFIGURACIÓN
# Copie este archivo como .env y configure sus valores
# ================================================

# Configuración de Base de Datos
DB_HOST=your_database_host
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password
DB_CHARSET=utf8mb4

# Configuración de la Aplicación
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=America/Bogota

# Límites de Seguridad
MAX_EXECUTION_TIME=300
MEMORY_LIMIT=256M
MAX_INPUT_TIME=60

# Configuración de CORS
# Use * para permitir todos los orígenes o especifique dominios separados por comas
CORS_ALLOWED_ORIGINS=*

# Configuración de Logs
LOG_LEVEL=error
LOG_PATH=logs/

# Límite predeterminado para modo prueba
DEFAULT_LIMIT_PRUEBA=2